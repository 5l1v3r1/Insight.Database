<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <description>
      An Insight.Database provider for MySql so the two can play together nicely.
      Automatically installs MySql.Data driver.
    </description>
    <PackageTags>Insight orm sql mysql micro-orm</PackageTags>
  </PropertyGroup>
  
  <PropertyGroup>
    <TargetFrameworks>net40;net45;net451</TargetFrameworks>
  </PropertyGroup>
 
  <Import Project="..\SharedConfiguration.csproj" />

  <PropertyGroup Condition="$(Configuration) == 'Release'">
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Insight.Database.snk</AssemblyOriginatorKeyFile>
    <DocumentationFile>bin\Release\$(TargetFramework)\Insight.Database.Providers.MySql.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup Condition="$(Configuration) == 'Release'">
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="1.1.0" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="6.9.9" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Insight.Database.Core\Insight.Database.Core.csproj" />
  </ItemGroup>
</Project>
