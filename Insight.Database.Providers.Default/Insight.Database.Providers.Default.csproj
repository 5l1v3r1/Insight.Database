<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net35;net40;net45;net451;netcoreapp2.0</TargetFrameworks>
  </PropertyGroup>
  <Import Project="..\SharedConfiguration.csproj" />
  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="$(SqlClientVersion)" Condition="$(SqlClientVersion) != ''" />
    <PackageReference Include="System.Diagnostics.Tools" Version="$(SystemDiagnosticsToolsVersion)" Condition="$(SystemDiagnosticsToolsVersion) != ''" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Insight.Database\Insight.Database.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Data" Condition="$(SqlClientVersion) == ''" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="OdbcInsightDbProvider.cs" Condition="$(HasOleDb) != 'true'" />
    <Compile Remove="OleDbInsightDbProvider.cs" Condition="$(HasOdbc) != 'true'" />
  </ItemGroup>
  <ItemGroup Condition="$(HasSqlDeriveParameters) == 'true'">
    <Compile Remove="DeriveParameters\*.cs" />
  </ItemGroup>
</Project>
