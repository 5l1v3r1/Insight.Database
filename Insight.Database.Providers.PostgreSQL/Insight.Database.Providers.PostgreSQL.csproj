<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <description>
      A PostgreSQL provider for Insight.Database so Insight.Database can do its magic on PostgreSQL.
      Automatically installs Npgsql PostgreSQL driver.
    </description>
    <PackageTags>Insight orm sql postgre postgresql managed micro-orm</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net45;net451</TargetFrameworks>
  </PropertyGroup>

  <Import Project="..\SharedConfiguration.csproj" />

  <PropertyGroup Condition="$(Configuration) == 'Release'">
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Insight.Database.snk</AssemblyOriginatorKeyFile>
    <DocumentationFile>bin\Release\$(TargetFramework)\Insight.Database.Providers.PostgreSQL.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup Condition="$(Configuration) == 'Release'">
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="1.1.0" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Npgsql" Version="3.2.2" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Insight.Database.Core\Insight.Database.Core.csproj" />
  </ItemGroup>
</Project>
