<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <description>
      A DB2 ODP.NET provider for Insight.Database so Insight.Database can do its magic on DB2.
    </description>
    <PackageTags>Insight orm sql DB2 micro-orm</PackageTags>
  </PropertyGroup>
  
  <PropertyGroup>
    <ProjectType>LibraryPackage</ProjectType>
    <TargetFrameworks>net451;netstandard1.6;netstandard2.0</TargetFrameworks>
    <Platform>x64</Platform>
    <RuntimeIdentifiers>win7</RuntimeIdentifiers>
    <ResolveAssemblyWarnOrErrorOnTargetArchitectureMismatch>None</ResolveAssemblyWarnOrErrorOnTargetArchitectureMismatch>
  </PropertyGroup>

  <Import Project="..\SharedConfiguration.csproj" />

  <ItemGroup Condition="$(TargetFramework) == 'net451'">
    <PackageReference Include="IBM.Data.DB2" Version="10.0.5.5" />
  </ItemGroup>
 
  <ItemGroup Condition="$(TargetFramework) != 'net451'">
    <PackageReference Include="IBM.Data.DB2.Core" Version="1.0.0.100" />
<!--    
    Need to figure out how to include this package conditionally on the target runtime identifier
    <PackageReference Include="IBM.Data.DB2.Core-lnx" Version="1.0.0.100" Condition="$(TargetRuntime) == 'unix'" />
  -->
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework) != 'net451'">
    <PackageReference Include="System.Data.Common" Version="4.3.0" />
  </ItemGroup>
  <PropertyGroup Condition="$(TargetFramework) != 'net451'">
    <DefineConstants>$(DefineConstants);USE_CORE;NO_BULK_COPY;NO_DERIVE_PARAMETERS;NO_SCHEMA_TABLE</DefineConstants>
  </PropertyGroup>  
  
  <ItemGroup>
    <ProjectReference Include="..\Insight.Database.Core\Insight.Database.Core.csproj" />
  </ItemGroup>
</Project>
